class Solution {
    public int longestConsecutive(int[] a) {
        int n=a.length;
        if (n == 0) return 0;

        HashSet<Integer> set = new HashSet<>();
        for (int num : a) {
            set.add(num);
        }

        int maxLength = 0;

        for (int num : set) {
            if (!set.contains(num - 1)) {
                int current = num;
                int count = 1;

                while (set.contains(current + 1)) {
                    current++;
                    count++;
                }

                maxLength = Math.max(maxLength, count);
            }
        }

        return maxLength;
    }
}
