public class Main {

    public static int maxSubArray(int[] arr) {
        int maxSum = arr[0];
        int currentSum = 0;

        for (int num : arr) {
            currentSum += num;

            if (currentSum > maxSum) {
                maxSum = currentSum;
            }

            if (currentSum < 0) {
                currentSum = 0;
            }
        }

        return maxSum;
    }
}
